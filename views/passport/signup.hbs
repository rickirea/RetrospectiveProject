<form id="form" action="/signup" method="POST">
  <h2 style="text-align: center;">New User</h2>
    <label for="username">Username</label><br>
    <input type="text" name="username"
      placeholder="AnakinSkywalker">

    <br><br>
    <label for="password">Password</label>
    <br>
    <input type="password" name="password"
      placeholder="DeathStar">
    <br><br>
    <label for="curso">Curso</label>
    <select name="curso">
      <option value="Web Development Part-Time" selected>Web Development Part-Time</option>
      <option value="Web Development Full-Time">Web Development Full-Time</option>
    </select>
    <br><br>
    {{#if errorMessage}}
      <div class="error-message">{{ errorMessage }}</div>
    {{/if}}
    <button>Create account</button>
  </form>